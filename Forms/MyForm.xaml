<Window x:Class="RAA_View_Renumber.MyForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RAA_View_Renumber"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="800" Title="Revit Add-In Academy Skills 2">
    <Border Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="label" Content="View Renumber" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontFamily="Arial Rounded MT Bold" FontSize="48"/>
            <Label x:Name="label1" Content="Click 'Select' then pick sheet views to renumber in order" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="1" VerticalAlignment="Center" FontFamily="Segoe UI" FontSize="20"/>
            <Button x:Name="btnSelect" Grid.Column="1" Content="Select..." HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Top" Margin="10,10,0,0" Width="100" Height="35" FontSize="16" Click="btnSelect_Click"/>
            <ListBox x:Name="lbxViews" Grid.Row="2" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,10,10,10" FontSize="16"/>
            <Label x:Name="label2" Content="Select View start number" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="3" VerticalAlignment="Center" FontFamily="Segoe UI" FontSize="20"/>
            <ComboBox x:Name="cbxViewNumber" Grid.Row="4" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="640" FontSize="16">
                <ComboBoxItem Content="1" IsSelected="True"/>
                <ComboBoxItem Content="2"/>
                <ComboBoxItem Content="3"/>
                <ComboBoxItem Content="4"/>
                <ComboBoxItem Content="5"/>
                <ComboBoxItem Content="6"/>
                <ComboBoxItem Content="7"/>
                <ComboBoxItem Content="8"/>
                <ComboBoxItem Content="9"/>
                <ComboBoxItem Content="10"/>
            </ComboBox>
            <Button x:Name="btnCancel" Grid.Column="1" Content="Cancel" HorizontalAlignment="Left" Grid.Row="6" VerticalAlignment="Center" Margin="10,0,0,0" Width="100" Height="35" FontSize="16" Click="btnCancel_Click"/>
            <Button x:Name="btnOK" Grid.Column="0" Content="OK" HorizontalAlignment="Right" Grid.Row="6" VerticalAlignment="Center" Margin="10,0,10,0" Width="60" Height="35" FontSize="16" Click="btnOK_Click"/>

        </Grid>
    </Border>

</Window>
